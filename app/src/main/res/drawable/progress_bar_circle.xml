<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="7.5"
            android:useLevel="false">
            <solid android:color="@color/light_texts_content"/>
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
        <shape
            android:shape="ring"
            android:thicknessRatio="7.5"
            android:useLevel="true">
            <solid android:color="@color/light_base_pink"/>
        </shape>
        </rotate>
    </item>
</layer-list>