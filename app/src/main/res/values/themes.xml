<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.StudentAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_backgrounds_closest_event_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_backgrounds_closest_event_background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Cursor color. -->
        <item name="colorAccent">@color/light_texts_main_titles</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_backgrounds_main_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/light_backgrounds_course_background</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="android:textColorPrimaryDisableOnly">@color/light_texts_main_titles</item>

        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <item name="editTextStyle">@style/App_EditTextStyle</item>

        <item name="drawerArrowStyle">@style/DrawerIcon</item>

        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>

    </style>


    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
        <item name="backgroundTint">@color/light_backgrounds_closest_event_background</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">25%</item>

    </style>


    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>


    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/LightCategoryTitle</item>
        <item name="android:textColor">@color/light_texts_main_titles</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/LightCategoryTitle2</item>
        <item name="android:textColorHint">@color/light_texts_sub_titles</item>
        <item name="android:textColor">@color/light_texts_main_titles</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/light_texts_main_titles</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/light_texts_main_titles</item>
    </style>


</resources>